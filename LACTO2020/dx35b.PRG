CREATE TABLE DATOS (ID n(5),NP n(2),FECHA d(8),STAT c(5),DGES n(3),SER1 n(2),FECHA2 d(8),STAT2 c(5),DIAS n(3),SER2 n(2))

USE C:\LACTO2006\LX10\CALOR ORDER 2 IN 2

SELECT ID,NP,FECHA,STAT,DGES,SER FROM CALOR WHERE YEAR(FECHA)=xYEAR AND STAT="CARGA" AND DGES>0 AND DGES<36 ORDER BY ID INTO TABLE DATOS35
xxTOTAL=RECCOUNT()

SELECT DATOS35
xxNUEVA=0

SCAN 
xID=DATOS35.ID

SELECT CALOR
SEEK xID

	SCAN WHILE CALOR.ID=DATOS35.ID 
		IF CALOR.NP=DATOS35.NP AND CALOR.FECHA>DATOS35.FECHA AND STAT="INSEM"
			*?DATOS35.ID,DATOS35.FECHA,DATOS35.STAT,DATOS35.SER,DATOS35.DGES
			*?ID,FECHA,STAT,SER,DIAS
			xxNUEVA=xxNUEVA+1
			
			SELECT DATOS
			APPEND BLANK
			REPLACE ID WITH DATOS35.ID,NP WITH DATOS35.NP,FECHA WITH DATOS35.FECHA,STAT WITH DATOS35.STAT;
					DGES WITH DATOS35.DGES,SER1 WITH DATOS35.SER,FECHA2 WITH CALOR.FECHA,STAT2 WITH CALOR.STAT;
					DIAS WITH CALOR.DIAS,SER2 WITH CALOR.SER 
		EXIT
		ENDIF
	ENDSCAN
	SELECT DATOS35
ENDSCAN
SELECT DATOS
