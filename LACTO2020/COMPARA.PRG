SET SAFETY OFF
SET CENTURY ON
SET DATE YMD
B=CTOD("")
BANCO1=FCREATE('BANCO1.TXT')

USE CBAJA ORDER 1 IN 3 

CREATE TABLE PESADA (ID n(6)) 
APPEND FROM C:\LACTO2006\ARCHIVOS\NOPESADAS XLS
BROWSE

USE C:\LACTO2006\LX10\REG IN 2 ORDER 2

SELECT REG
SET ORDER TO 2
SET RELATION TO CAU2 INTO CBAJA

SELECT PESADA
SET RELATION TO ID INTO REG

xTOTAL=0

	SCAN 
			ww=""
			ww=ww+PADR(PESADA.ID,6,' ')
	
			IF PESADA.ID=REG.ID
	
			xFB2=DTOC(REG.FB2)
			**********************
			DO CASE	
				CASE MONTH(REG.FB2)=1
				xFB2=SUBSTR(xFB2,9,2)+"ene"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=2
				xFB2=SUBSTR(xFB2,9,2)+"feb"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=3
				xFB2=SUBSTR(xFB2,9,2)+"mar"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=4
				xFB2=SUBSTR(xFB2,9,2)+"abr"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=5
				xFB2=SUBSTR(xFB2,9,2)+"may"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=6
				xFB2=SUBSTR(xFB2,9,2)+"jun"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=7
				xFB2=SUBSTR(xFB2,9,2)+"jul"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=8
				xFB2=SUBSTR(xFB2,9,2)+"ago"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=9
				xFB2=SUBSTR(xFB2,9,2)+"sep"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=10
				xFB2=SUBSTR(xFB2,9,2)+"oct"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=11
				xFB2=SUBSTR(xFB2,9,2)+"nov"+SUBSTR(xFB2,3,2)
				CASE MONTH(REG.FB2)=12
				xFB2=SUBSTR(xFB2,9,2)+"dic"+SUBSTR(xFB2,3,2)
				OTHERWISE
				xFB2='NO SE PESO'
			ENDCASE			
			**********************	
	
			ww=ww+xFB2+SPACE(5)
			ww=ww+IIF(REG.PSV='S' AND REG.FB2=B,'P VENTA',REG.MOT2+SPACE(4))
			*ww=ww+SPACE(2)
			*ww=ww+STR(REG.CAU2,3) &&+SPACE(2)+CBAJA.CNOM
			ww=ww+SPACE(3)
			ELSE
			ww=ww+'NO EXISTE'
			ENDIF


			ww=ww+chr(13)+chr(10)

						
	   =FWRITE(BANCO1,ww)
	   xTOTAL=xTOTAL+1

	   
	 	ENDSCAN
	 	
	   =FCLOSE(BANCO1) 
	   
