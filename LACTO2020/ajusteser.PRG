USE c:\lacto2006\lx88\reg IN 1
USE c:\Lacto2006\lx88\CALOR IN 2

SELECT REG
SET ORDER TO 2
GO TOP

SCAN
XID=REG.ID
	SELECT CALOR
	SET ORDER TO 2
	SEEK XID
	IF FOUND()
		xxSER=1
		SCAN WHILE XID=CALOR.ID
			IF STAT='CARGA'
				REPLACE CALOR.SER WITH xxSER-1
			ENDIF	
			
			IF STAT='INSEM' AND CALOR.SER>0 
			Replace CALOR.SER WITH xxSER
			xxSER=xxSER+1	
			ENDIF
			
		ENDSCAN
		REPLACE REG.NS WITH xxSER-1
	ENDIF
ENDSCAN


CLOSE DATABASES
	

